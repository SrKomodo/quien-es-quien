</nav>
<script>
    let camera;
    let scene;
    let helios;

    camera = new THREE.PerspectiveCamera(45, 250 / 500, 1, 2000);
    camera.position.z = 250;

    scene = new THREE.Scene();

    var ambientLight = new THREE.AmbientLight(0xcccccc, 0.4);
    scene.add(ambientLight);

    var pointLight = new THREE.PointLight(0xffffff, 0.8);
    camera.add(pointLight);
    scene.add(camera);

    function loadModel() {
        helios.scale.x = helios.scale.y = helios.scale.z = 0.2;
        helios.position.y = -50;
        scene.add(helios);
    }

    var loader = new THREE.OBJLoader();

    loader.load('../Content/helios.obj', function (obj) { helios = obj; loadModel(); });

    renderer = new THREE.WebGLRenderer({ alpha: true });
    renderer.setPixelRatio(window.devicePixelRatio);
    renderer.setSize(250, 500);
    document.getElementById("eskere").appendChild(renderer.domElement);

    function animate() {
        requestAnimationFrame(animate);
        camera.lookAt(scene.position);
        renderer.render(scene, camera);
        helios.rotation.y += 0.02;
    }
    animate();
</script>