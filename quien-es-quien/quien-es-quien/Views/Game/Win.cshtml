<link href="~/Content/Game/Win.scss" rel="stylesheet" type="text/scss" />

<h1>¡¡¡GANASTE!!!</h1>

@if (ViewBag.current == null) {
    <span>Si quieres guardar tus bitcoins, <a href="@Url.Action("Index", "Login")">Inicia Sesion</a></span>
}
else {
    <span>Tenias @ViewBag.original bitcoins</span>
    <span>Ahora tenes @ViewBag.current</span>
    <span>Ganaste @(ViewBag.current - ViewBag.original) bitcoins!</span>
}
<span><a href="@Url.Action("Index", "Home")">Volver a la Home</a></span>