<link href="~/Content/Login/Index.scss" rel="stylesheet" type="text/scss" />
<form method="post" action="@Url.Action("Login")">
    <h1>Login</h1>
    @if (ViewBag.err) {
        <span>Contraseña o nombre incorrecto, por favor intente de nuevo</span>
    }
    <label for="name">Usuario:</label>
    <input type="text" name="name" id="name" />
    <label for="pass">Contraseña</label>
    <input type="password" name="pass" id="pass" />
    <input type="submit" value="Iniciar Sesion" />
    <a href="@Url.Action("Register")">Registrarse</a>
</form>